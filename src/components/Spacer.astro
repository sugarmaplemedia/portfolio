---
interface Props {
    size?: string;
}
const {size = ""} = Astro.props;
let marginSize: string;

switch (size) {
    case "sml":
        marginSize = "12px";
        break;
    default:
        marginSize = "24px";
        break;
    case "lg":
        marginSize = "48px";
        break;
}
---

<br style={"margin-bottom: " + marginSize} />