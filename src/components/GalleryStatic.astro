---
import { getCollection } from "astro:content";
import GalleryStatic from "./GalleryStatic/";
const { size = "md" } = Astro.props;
const { tag = "" } = Astro.props;
const { count = 0 } = Astro.props;

const portfolio = await getCollection("portfolio");
const dbList = portfolio.map((item) => {
    return {
        name: item.data.name,
        tags: item.data.tags,
        link: `/portfolio/${item.slug}`,
        image: `/images/portfolio/${item.slug}/${item.slug}-icon.png`,
        source: item.data.link
    };
})

---

<GalleryStatic database={{entries: dbList}} size={size} tag={tag} count={count} />