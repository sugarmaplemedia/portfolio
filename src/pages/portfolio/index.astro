<style>
	.portfolio-service-box {
		display: flex;
		align-items: center;
	}

	div.portfolio-service {
		width: 216px;
		position: relative;
	}
	.portfolio-service h2 {
		margin-bottom: 0;

		font-size: 1.75rem;
		line-height: 1.75rem;
		text-transform: uppercase;
	}
	.portfolio-service br {
		margin: 0;
	}

	iconify-icon.portfolio-service {
		position: absolute;
		left: -18px;
		bottom: 20px;
		z-index: -1;

		transform: scale(3.5);
		color: var(--clr-tan-secondary);
	}

	iconify-icon.portfolio-proficiency {
		padding: 7px;

		background-color: var(--clr-tan-secondary);
		border-radius: 100%;
	}

	@media only screen and (max-width: 850px) {
