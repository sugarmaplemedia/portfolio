</Layout>

<style>
	#skills-experience-box {
		display: flex;
	}

	#skills-box {
		padding-right: 36px;
	}

	.degree {
		margin-bottom: 18px;
	}

	#work-box li {
		width: 66%;
	}
	#work-box li:nth-child(even) {
		margin: 36px 0;
	}

	@media only screen and (max-width: 650px) {
		#skills-experience-box {
			flex-direction: column;
			align-items: center;
			gap: 24px;
		}

		#work-box li {
			width: 92%;
		}
	}
</style>
